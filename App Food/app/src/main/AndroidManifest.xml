<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.phant.appfood">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionbar">
        <activity android:name=".Home.HomeActivity" />
        <activity android:name=".Login.View.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Options.View.OptionsActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".Register.View.RegisterActivity" />
        <activity android:name=".OrderActivity" />
        <activity android:name=".Client.Menu.View.MenuActivity" />
        <activity android:name=".Admin.Menu.View.MenuAdminActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".Admin.Chat.ChatAdminActivity"></activity>
    </application>

</manifest>